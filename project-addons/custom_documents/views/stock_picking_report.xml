<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="stock.report_picking">

            <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <div class="header">
                <div class="row" style="margin-top: 15px;">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 150px;"/>
                    </div>
                    <!--div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/-->
                    <div class="col-xs-9 text-center" style="margin-top:30px;">
                        <h2>
                            <span t-field="o.picking_type_id"/>:
                            <span t-field="o.name"/>
                        </h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <div class="row">
                            <div class="col-xs-12">
                                <div t-field="company.partner_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                Tel.:<span t-field="company.phone"/>
                            </div>
                            <div class="col-xs-6">
                                Fax.:<span t-field="company.fax"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <span t-field="company.email"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <span t-field="company.website"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                Vat Reg. Nº: <span t-field="company.partner_id.vat"/>
                            </div>
                        </div>

                    </div>
                    <div class="col-xs-3 col-xs-offset-6">
                        <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        <span t-field="o.partner_id.vat"/>
                    </div>
                </div>
            </div>

            <div class="page">
            <!--div class="row">
                <div class="col-xs-4 pull-right">
                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                        <span><strong>Supplier Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                        <span><strong>Warehouse Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                        <span><strong>Customer Address:</strong></span>
                    </div>
                    <div t-if="o.partner_id">
                        <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div>
                </div>
            </div-->
            <div name="partner_header">
            </div>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th><strong>Despatch Note Nº</strong></th>
                            <th><strong>State</strong></th>
                            <th><strong>Commitment Date</strong></th>
                            <th name="td_sched_date_h"><strong>Scheduled Date</strong></th>
                            <th><strong>Order (Origin)</strong></th>
                            <th><strong>Delivery Expense</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span t-field="o.name"/>
                            </td>
                            <td>
                                <span t-field="o.state"/>
                            </td>
                            <td>
                                <span t-field="o.date"/>
                            </td>
                            <td name="td_sched_date">
                                <span t-field="o.min_date"/>
                            </td>
                            <td>
                                <span t-field="o.origin"/>
                            </td>
                            <td>
                                -
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th><strong>Ref.</strong></th>
                            <th><strong>Product</strong></th>
                            <th class="text-right"><strong>Quantity</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.move_lines" t-as="move">
                            <td><span t-esc="move.product_id.get_product_ref(move.partner_id)"/></td>
                            <td><span t-field="move.product_id.name"/></td>
                            <td class="text-right"><span t-field="move.product_uom_qty"/> <span t-field="move.product_uom" groups="product.group_uom"/></td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>
                <table class="table table-condensed notes">
                    <tr>
                        <td><span t-field="o.note"/></td>
                    </tr>
                </table>
            </div>

            <div class="footer">
                <div class="row">
                    <div class="col-xs-2 col-xs-offset-10 col-xs-height col-bottom">
                        <ul class="list-inline">
                            <li>Page:</li>
                            <li><span class="page"/></li>
                            <li>/</li>
                            <li><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </div>
        </template>

        <template id="stock.report_picking_">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock.report_picking')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
